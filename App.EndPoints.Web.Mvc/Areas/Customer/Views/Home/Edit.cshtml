@using App.EndPoints.Web.Mvc.Areas.Customer.Models.ViewModel
@using Utility
@model CustomerVM
@{
    ViewData["Title"] = "ویرایش ";
}
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Home" asp-action="Edit" asp-area="Customer" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <h2>ایجاد حساب کاربری</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
             <div class="form-floating py-2 col-6 w-100">
                <input asp-for="FirstName" class="form-control"  />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-6 w-100">
                <input asp-for="LastName" class="form-control"  />
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6 w-100">
                <input asp-for="PhoneNumber" class="form-control"  />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-floating py-2 col-6 w-100">
                <input asp-for="Address" class="form-control"  />
                <label asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            

            <div class="form-floating py-2 col-6 w-100">
                <input  type="file" name="uploadFiles" id="uploadBox"  class="form-control" />
                <label for="uploadBox">تصویر</label>
                </div>

            @*<div class="form-floating py-2 col-6 w-100">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6 w-100">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>*@
            <button id="EditSubmit" type="submit" class="w-100 btn btn-lg btn-outline-primary">ویرایش</button>
        </form>
    </div>
    
</div>